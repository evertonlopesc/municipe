<p style="color: green"><%= notice %></p>

<h1>Counties</h1>

<%= link_to "New county", new_county_path %>
<%= link_to "Inactive counties", inactives_counties_path %>

<hr>

<div>
  Search
  <div>
    <%= form_with url: "/counties", method: :get do |form| %>
      <%= form.text_field :name, placeholder: "by Name" %>
      <%= form.text_field :state, placeholder: "by State" %>
      <%= form.submit "Search" %>
    <% end %>
  </div>
</div>

<hr>

<div id="counties">
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Id_IBGE</th>
        <th>State</th>
        <th>Addresses</th>
        <th>People</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @counties.each do |county| %>
        <tr>
          <%= render partial: "counties", locals: { county: county } %>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%== pagy_nav(@pagy) %>
</div>