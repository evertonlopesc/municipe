      <h2><%= pluralize(address.errors.count, "error") %> prohibited this county from being saved:</h2>

      <ul>
        <% address.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :cep, style: "display: block" %>
    <%= form.text_field :cep %>
  </div>

  <div>
    <%= form.label :street, style: "display: block" %>
    <%= form.text_field :street %>
  </div>

  <div>
    <%= form.label :number, style: "display: block" %>
    <%= form.text_field :number %>
  </div>

  <div>
    <%= form.label :complement, style: "display: block" %>
    <%= form.text_field :complement %>
  </div>

  <div>
    <%= form.label :neighborhood, style: "display: block" %>
    <%= form.text_field :neighborhood %>
  </div>

  <div>
    <%= form.label :status, style: "display: block" %>
    <%= form.select :status, Address::Record.statuses.values %>
  </div>

  <div>
    <%= form.label :county_id, style: "display: block" %>
    <%= form.select :county_id, [[county_id]] %>
